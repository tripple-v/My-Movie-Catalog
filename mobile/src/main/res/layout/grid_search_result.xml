<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_thumb_poster"
        android:layout_width="@dimen/thumb_height_list"
        android:layout_height="@dimen/thumb_height_list"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_report_image"
        android:contentDescription="@string/description_thumb_poster"
    />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_thumb_poster"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/hello_world"
        android:textSize="@dimen/title_size_list"
    />

    <TextView
        android:id="@+id/item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/hello_world"
        android:textSize="@dimen/subtitle_size_list"
        />

</RelativeLayout>