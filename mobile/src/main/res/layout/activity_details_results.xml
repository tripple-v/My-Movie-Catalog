
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">

    <RelativeLayout
        android:id="@+id/progress_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </RelativeLayout>

<com.nirhart.parallaxscroll.views.ParallaxScrollView
    android:id="@+id/parallax_view"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="3.4"
    tools:context=".DetailsResultsActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_poster"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/picture_size"
            android:src="@android:drawable/ic_menu_report_image" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/label_title"
                style="@style/label"
                android:padding="5dp"
                android:text="@string/label_title"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_title"
                style="@style/text"
                android:layout_toRightOf="@+id/label_title"
                android:padding="5dp"
                android:text="@string/unknown"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/label_actors"
                style="@style/label"
                android:layout_below="@+id/text_title"
                android:padding="5dp"
                android:text="@string/label_actors"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_actors"
                style="@style/text"
                android:layout_below="@+id/text_title"
                android:layout_toRightOf="@+id/label_actors"
                android:padding="5dp"
                android:text="@string/unknown"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/label_genre"
                style="@style/label"
                android:layout_below="@+id/text_actors"
                android:padding="5dp"
                android:text="@string/label_genres"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_genre"
                style="@style/text"
                android:layout_below="@+id/text_actors"
                android:layout_toRightOf="@+id/label_genre"
                android:padding="5dp"
                android:text="@string/unknown"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/label_overview"
                style="@style/label"
                android:layout_below="@+id/text_genre"
                android:padding="5dp"
                android:text="@string/label_overview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/text_overview"
                style="@style/text"
                android:layout_below="@+id/label_overview"
                android:padding="5dp"
                android:text="@string/unavailable"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>
</RelativeLayout>