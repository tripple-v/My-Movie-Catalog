<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_shadow"
>

    <ImageView
        android:id="@+id/item_thumb_poster"
        android:layout_width="@dimen/thumb_width_list"
        android:layout_height="@dimen/thumb_height_list"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/layer_margin_bottom"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:src="@android:drawable/ic_menu_report_image"
        android:contentDescription="@string/description_thumb_poster"
    />

    <ImageView
        android:id="@+id/item_button_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_delete"
    />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_thumb_poster"
        android:layout_toEndOf="@id/item_thumb_poster"
        android:layout_toLeftOf="@+id/item_button_corner"
        android:layout_toStartOf="@+id/item_button_corner"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@string/hello_world_big"
        android:textSize="@dimen/title_size_list"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
    />

    <TextView
        android:id="@+id/item_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_thumb_poster"
        android:layout_toEndOf="@id/item_thumb_poster"
        android:layout_below="@+id/item_title"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@string/label_genres"
        android:textSize="@dimen/subtitle_size_list"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <RatingBar
        style="@style/GoldRatingBar"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_genres"
        android:layout_toRightOf="@+id/item_thumb_poster"
        android:layout_toEndOf="@+id/item_thumb_poster"
        android:layout_marginTop="@dimen/standard_margin"
        android:numStars="5"
        android:rating="4.5"
        android:isIndicator="true"
        />

    <TextView
        android:id="@+id/item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rating_bar"
        android:layout_toEndOf="@id/rating_bar"
        android:layout_alignBottom="@id/rating_bar"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:text="@string/label_rating"
        android:textSize="@dimen/subtitle_size_list"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/item_video_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_thumb_poster"
        android:layout_toRightOf="@+id/item_thumb_poster"
        android:layout_below="@+id/rating_bar"
        android:layout_marginTop="@dimen/standard_margin"
        android:textSize="@dimen/subtitle_size_list"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_textview"
        android:text="@string/movie"/>

    <ImageView
        android:id="@+id/item_quality"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/logo_1080p"
        android:layout_below="@+id/rating_bar"
        android:layout_toEndOf="@id/item_video_type"
        android:layout_toRightOf="@id/item_video_type"
        android:layout_alignBottom="@id/item_video_type"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginStart="@dimen/minimum_margin"
        android:layout_marginLeft="@dimen/minimum_margin"/>

    <ImageView
        android:id="@+id/item_format"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/icon_format_digital"
        android:layout_below="@+id/rating_bar"
        android:layout_toEndOf="@id/item_quality"
        android:layout_toRightOf="@id/item_quality"
        android:layout_alignBottom="@id/item_video_type"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginStart="@dimen/minimum_margin"
        android:layout_marginLeft="@dimen/minimum_margin"/>

    <ImageView
        android:id="@+id/item_3d"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/logo_3d"
        android:layout_below="@+id/rating_bar"
        android:layout_toEndOf="@id/item_format"
        android:layout_toRightOf="@id/item_format"
        android:layout_alignBottom="@id/item_video_type"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginStart="@dimen/minimum_margin"
        android:layout_marginLeft="@dimen/minimum_margin"/>

    <TextView
        android:id="@+id/item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:text="@string/label_year"
        android:textSize="@dimen/subtitle_size_list"
        android:singleLine="true"
        android:ellipsize="end"
        />

</RelativeLayout>